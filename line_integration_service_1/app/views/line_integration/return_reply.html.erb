<!DOCTYPE html>
<html>
  <body>
    <div class="alert alert-success">
      <strong>Success!</strong> Line Account has been <%= (@type == 'new') ? 'added' : 'updated' %>.
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Line Channel Account Settings</div>
      <div class="panel-body">
        <form id="account-form" method="post" action="<%= @return_url %>">
          <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" type="text" value="<%= @name %>" readonly>
          </div>
          <div class="form-group">
            <label for="channel_id">Channel ID:</label>
            <input class="form-control" type="text" value="<%= @line_channel_id %>" readonly>
          </div>
          <div class="form-group">
            <label for="channel_id">Channel Secret:</label>
            <input class="form-control" type="text" value="<%= @line_channel_secret %>" readonly>
          </div>
          <div class="form-group">
            <label for="channel_id">Channel Access Token:</label>
            <input class="form-control" type="text" value="<%= @line_channel_access_token %>" readonly>
          </div>
          <input type="hidden" name="metadata" value="<%= @metadata.to_json %>" />
          <input type="hidden" name="name" value="<%= @name %>" />
          <input type="hidden" name="state" value="<%= @state %>" />
          <input class="btn btn-default" type="submit" value="Ok"/>
        </form>
      </div>
    </body>
  </body>
</html>
